<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!--Menu for Reports-->
    <record id="freight_report_wizard" model="ir.ui.view">
        <field name="name">fright report</field>
        <field name="model">freight.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="freight_type"/>
                    </group>
                    <group>
                        <field name="high_value"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Print PDF" class="btn-primary" type="object"/>
                    <button name="action_print_excel" string="Print Excel" class="btn-primary" type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="freight_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Freight Report</field>
        <field name="res_model">freight.report</field>
        <field name="view_id" ref="freight_report_wizard"/>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_freight_reporting" name="Reporting" parent="menu_freight_management" sequence="50"/>
    <menuitem id="menu_freight_report" name="Freight Report" parent="menu_freight_reporting" action="freight_report_wizard_action"/>

        <!--Menu for Audit Logs-->
    <menuitem id="menu_freight_audit_logs" name="Audit Logs" parent="menu_freight_management" sequence="40" action="action_freight_audit_log"/>

        <!--Menu for freight service-->
    <menuitem id="menu_freight_management" name="Freight" sequence="10"/>
    <menuitem id="menu_freight_operations" name="Operations" parent="menu_freight_management" sequence="20"/>
    <menuitem id="menu_freight_approvals" name="Freight Approvals" parent="menu_freight_operations" sequence="30" action="action_freight_approval"/>
    
</odoo>