<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <form string="Sales Order">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft, sent" class="oe_highlight"/>
                    <button name="request_approval" type="object" string="Request Approval" states="draft" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="freight_type"/>
                        <field name="cargo_weight"/>
                        <field name="high_value"/>
                        <field name="approval_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
